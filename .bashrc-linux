#.bashrc for Linux
export TIME_STYLE=long-iso
alias cd..="cd .."
alias ..="cd .."
alias ...="cd ../../"
alias cd-="cd -"
alias back="cd -"
alias cd--="cd --"
alias dir="ls -la"
alias dirs="dirs -v"
alias p="pushd"
alias po="popd"
alias cls="clear"
alias grep="grep --color=auto"
alias ls="ls --color=auto -lah"
alias ll="ls -la"
alias lt="ll -lath"
alias lth="ll -lath | head"
alias kk="ll -lath"
alias kh="ll -lath | head"
alias d="docker"
alias dps="docker ps -a"
alias dls="docker image ls"
alias todo="vim ~/TODO-T460.txt"
alias tmux="tmux -f ~/.tmuxrc"
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWCOLORHINTS=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
source /usr/share/git/completion/git-prompt.sh
export PROMPT_COMMAND=' __git_ps1 "┌──\033[01;36m\]\t \[\033[01;34m\][\w]\[\033[00m\]" "\n└────\[\033[0;31m\]█\[\033[00m\] "'
unset TMP
unset TEMP
set -o vi
# to be able to i-search in bash history with Ctrl-S
set stty -ixon
# Source goto
[[ -s "/usr/local/share/goto.sh" ]] && source /usr/local/share/goto.sh
